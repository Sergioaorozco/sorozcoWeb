---
import { Image } from "astro:assets";

const highlighted = [
  { name: "vueShop", url: "/portfolio", image:"/images/defaut.jpg" },
  { name: "Game", url: "/portfolio", image:"/images/defaut.jpg" },
  { name: "Database", url: "/portfolio", image:"/images/defaut.jpg" },
];

---

<section class="slateBG min-h-svh reveal">
  <article class="px-6 md:px-0 py-20 wrapper">
    <h2 class="text-slate-600 text-5xl">Portfolio</h2>
    <section class="">
      <ul class="flex flex-col lg:flex-row gap-3 w-full items-center mt-5">
        {
          highlighted.map(({ name, url, image }) => (
            <li class="border flex-col items-center flex-grow border-slate-400 rounded-md overflow-clip group flex-1 w-full">
              <a target="_blank" href={url}>
                <div class="flex justify-between items-center py-4 border-b border-slate-400 px-3 flex-1 group-hover:bg-white group-hover:transition-colors duration-300">
                  <h3>{name}</h3>
                  <h4>Visit</h4>
                </div>
                <Image
                  src={image}
                  width="455"
                  height="256"
                  loading="lazy"
                  class="w-full object-cover aspect-video group-hover:scale-105 group-hover:transition-all duration-500"
                  src={url}
                  alt={`visual representation of the ${name} project`}
                />
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </article>
</section>

<style>
  @keyframes slateBG {
    from {
      @apply rounded-2xl;
    }
    to {
      @apply bg-slate-300 rounded-3xl;
    }
  }

  .slateBG {
    animation: slateBG both;
    animation-timeline: view();
    animation-range: entry 40% exit 60%;
  }
</style>
