---
import MainLayout from "../layouts/MainLayout.astro";
import SorozcoMain from "../assets/icons/SorozcoType.astro"
let Title = [
  {name:'FrontEnd Developer', },
  {name:'•'},
  {name:'Graphic Designer'},
  {name:'•'},
  {name:'FrontEnd Developer', },
  {name:'•'},
  {name:'Graphic Designer'},
  {name:'•'},
]

let Tools = [
  {name:'Astro', url:"/Tools/Astrologo.svg", class:"delay-150 transition-transform" },
  {name:'Pinia', url:"/Tools/PiniaLogo.svg", class:"delay-75" },
  {name:'Firebase', url:"/Tools/Firebase.svg" , class:""},
  {name:'VueJs', url:"/Tools/VueLogo.svg", class:"" },
  {name:'Git', url:"/Tools/GitLogo.svg", class:"delay-75"},
  {name:'Tailwind', url:"/Tools/TailwindLogo.svg", class:"" },
  {name:'Figma', url:"/Tools/Figma.svg", class:"" },
]
---

<MainLayout>
  <section
    class="min-h-screen w-ful flex flex-col gap-y-6 justify-center items-center bg-stone-900 p-2 changeW clipBackground"
    data-background="dark"
  >
  <div class="text-white px-10 w-full max-w-screen-lg mx-auto">
    <SorozcoMain />
  </div>
  <p class="text-white text-3xl font-semibold italic md:hidden">Frontend Developer</p>
  <main
    class="py-3 md:flex justify-center items-center self-end gap-x-6 marqueeSection w-full px-6 max-w-screen-lg overflow-x-clip mx-auto hidden"
  >
    <ul class="flex gap-x-6 items-center text-white font-bold text-xl md:text-5xl will-change-transform italic">
      { Title.map(title => (
        <li class="marqueeInitial text-nowrap animate-ping">{title.name}</li>
      ))}
    </ul>
    <ul class="flex gap-x-6 items-center text-white font-bold text-xl md:text-5xl will-change-transform italic md:relative">
      { Title.map(title => (
        <li class="marqueeInitial text-nowrap animate-ping">{title.name}</li>
      ))}
    </ul>
  </main>
  <div class="w-full absolute bottom-0 mx-auto py-9 bg-black/20">
    <div class="flex flex-col md:flex-row gap-2 items-center justify-center md:justify-between w-10/12 mx-auto">
      <div class="flex gap-x-2 text-white">
        <div class="flex items-center justify-center">
          <span class="size-3 bg-green-500 border-2 border-green-400 rounded-full absolute"></span>
          <span class="size-5 bg-green-500 rounded-full animate-ping"></span>
        </div>
        <p class="text-lg font-bold">Working at: Sproutloud</p>
      </div>
      <div class="flex gap-x-2 items-center text-white">
        <img src="/ColombianFlag.svg" class="size-7" alt="Image of the colombian flag">
        <p>Based in Medellín, Colombia</p>
      </div>
    </div>
  </div>
  </section>
  <section class="min-h-screen max-w-screen bg-slate-200 py-8 md:py-16 px-6 pb-5 wrapper">
    <div class="flex flex-col gap-y-8">
      <div class="lg:px-0 text-slate-600 reveal">
        <h2 class="text-slate-600 text-6xl">About Me</h2>
        <p class="mt-5 text-2xl md:text-3xl leading-tight text-pretty">Mid-level frontend developer crafting user-friendly, engaging experiences with VueJs and Astro. Proficient in agile methodologies (SAFe) and teamwork, I bring a strong work ethic and passion for excellence to help your team achieve its goals.</p>
      </div>
      <div class="reveal">
        <h2 class="text-slate-600 text-4xl reveal">Tools</h2>
        <ul class="mt-5 flex flex-row flex-wrap md:justify-center gap-2 z-10">
          {Tools.map(icon => (
            <li class:list={icon.class} class="border border-slate-300 bg-white shadow-sm rounded-md px-3 py-2 flex gap-x-2 flex-grow flex-col md:justify-evenly md:size-36 md:aspect-square justify-center items-center md:revealTools">
              <img width="56px" class="size-14" src={icon.url} alt={`image of the ${icon.name} logo`}>
              <p class="font-semibold text-slate-500">{icon.name}</p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>
</MainLayout>

<style>

  @keyframes reveal {
    from {
      opacity: 0;
      transform: translateY(10em);
    }
    to{
      opacity: 1;
    }
  }

  @keyframes changeWidth {
    0% {
      margin-inline: 0em;
    }
    20%,100% {
      margin-inline: 1em;
      border-bottom-left-radius: 3em;
      border-bottom-right-radius: 3em;
      @apply bg-blue-900 duration-700;
    }
  }

  @keyframes marqueeInitial {
    0% {
      transform: translateX(-1.2rem);
    }
    100% {
      transform: translateX(-905px);
    }
    
  }

  @keyframes revealTools {
      0%, 80%, 100% {transform: translateY(0em);}
      40% {transform: translateY(-6em);}
      60% {transform: translateY(-1em);}
    }
  
  
  .revealTools {
    animation: revealTools ease normal;
    animation-timeline: view();
    animation-range: entry 10% contain 50%;
  }

  .clipBackground {
    clip-path: view-box;
  }

  .wrapper {
    max-inline-size: 1125px;
    margin: 0 auto;
  }

  .reveal{
    animation: reveal ease-in-out both;
    animation-timeline: view(block);
    animation-range: entry 10% contain 30%;
  }

  .changeW {
    animation: changeWidth linear both;
    animation-timeline: view(block);
    animation-range: exit 0% cover 100%;
  }

  .marqueeInitial {
    animation: marqueeInitial 10s linear infinite;
  }
  .marqueeSection {
    mask-image: linear-gradient(to left, transparent, black 80%, transparent);
  }
</style>
